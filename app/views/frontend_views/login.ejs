<body>
	<script src='/js/jquery.min.js'></script>

	<body>
		<h1>Blogpress Login Form </h1>

		<% 
			if (userLoginError){
		%>


			<div id="userLoginErrMsgDiv" style="color: #ffffff; background-color: #fd5c63;padding: 15px;border: 1px solid transparent;border-radius: 4px;max-width: 30%;margin: 0 auto;">Some
				<%= userLoginError  %>
			</div>

		<%
			}
		%>

		<!--728x90-->
		<!-- <div class="clear-loading spinner">
			<span></span>
		</div> -->
		<!--728x90-->
		<div class="w3ls-login box box--big">

			<!-- form starts here -->
			<form action="<%= generateUrl('user.loginprocess')  %>" method="post">
				<div class="agile-field-txt">
					<label><i class="fa fa-user" aria-hidden="true"></i> Email </label>
					<input type="text" name="email" placeholder="Enter Email" required="" />
				</div>
				<div class="agile-field-txt">
					<label><i class="fa fa-unlock-alt" aria-hidden="true"></i> password </label>
					<input type="password" name="password" placeholder="Enter Password" required="" id="myInput" />
					<div class="agile_label">
						<input id="check3" name="check3" type="checkbox" value="show password" onclick="myFunction()">
						<label class="check" for="check3">Show password</label>
					</div>
					<div class="agile-right">
						<a href="#">forgot password?</a>
					</div>
				</div>
				<!-- script for show password -->
				<script>
					function myFunction() {
						var x = document.getElementById("myInput");
						if (x.type === "password") {
							x.type = "text";
						} else {
							x.type = "password";
						}
					}
				</script>
				<!-- //end script -->
				<input type="submit" value="LOGIN">
			</form>
		</div>
		<!-- //form ends here -->
		<!--728x90-->
		<!--copyright-->
		<div class="copy-wthree">
