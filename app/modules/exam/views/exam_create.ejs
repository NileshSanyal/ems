<% include ../../../views/partials/adminhead %>

<body class="cbp-spmenu-push">
	<div class="main-content">

		<!--left-fixed -navigation-->
		<% include ../../../views/partials/adminaside %>
		<div id="page-wrapper">
			<div class="main-page">
				<div class="forms">
					<h2 class="title1">Forms</h2>

					<div class=" form-grids row form-grids-right">
						<div class="widget-shadow " data-example-id="basic-forms">
							<div class="form-title">
								<h4>Horizontal form :</h4>
							</div>
							<div class="form-body">
								
								<form class="form-horizontal" action="" method="POST">
									<div class="form-group">
										<label for="full_name" class="col-sm-2 control-label">Exam Name</label>
										<div class="col-sm-9">
											<input type="text" class="form-control" id="exam_name" name="exam_name" placeholder="Programming with C++">
										</div>
									</div>
									<div class="form-group">
										<label for="email" class="col-sm-2 control-label">Exam Type</label>
										<div class="col-sm-9">
											<select class="form-control" id="exam_type" name="exam_type">
												<option value="one" selected>One Time</option>
												<option value="multiple">Multiple Time</option>
											</select>
										</div>
									</div>
									<div class="form-group">
										<label for="email" class="col-sm-2 control-label">Exam Class</label>
										<div class="col-sm-9">
											<select class="form-control" id="exam_class" name="exam_class">
												<option value="">select</option>
												<% for(var i= 0; i< classList.length; i++){ %>
													<option value="<%= classList[i]._id %>">
														<%= classList[i].class_name %>
													</option>
													<% } %>
											</select>
										</div>
									</div>
									<div class="form-group">
										<label for="email" class="col-sm-2 control-label">Exam Subject</label>
										<div class="col-sm-9">
											<select class="form-control" id="exam_subject" name="exam_subject">
												<option value="">select</option>
												
													
											</select>
										</div>
									</div>
									
									<div class="form-group">
										<label for="contact_no" class="col-sm-2 control-label">Exam Date</label>
										<div class="col-sm-9">
											<input type="date" class="form-control" id="exam_date" name="exam_date" placeholder="">
										</div>
									</div>


									<!-- Questions load -->

										<div class="questionsCollecion" id="questionsCollecion">
											<!-- <div class="checkbox" id="questionCollection"></div> -->
										</div>
									

									<div class="col-sm-offset-2"> <button type="submit" id="createExmBtn" class="btn btn-default">Create Exam</button> </div>

								</form>
							</div>
						</div>
					</div>

				</div>
			</div>
		</div>
		<% include ../../../views/partials/adminfooter %>
	</div>
</body>

</html>