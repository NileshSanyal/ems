<% include ../../../views/partials/adminhead %>

<body class="cbp-spmenu-push">
	<div class="main-content">

		<!--left-fixed -navigation-->
		<% include ../../../views/partials/adminaside %>
		<div id="page-wrapper">
			<div class="main-page">
				<div class="forms">
					<h2 class="title1">Forms</h2>

					<div class=" form-grids row form-grids-right">
						<div class="widget-shadow " data-example-id="basic-forms">
							<div class="form-title">
								<h4>Horizontal form :</h4>
							</div>
							<div class="form-body">
								<% if(questionUpdateErrorMessage) { %>
								<div class="alert alert-danger alert-dismissible">
									<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
									<strong>Error!</strong>
									<%= questionUpdateErrorMessage %>
								</div>
								<% } %>
								<form class="form-horizontal" action="<%= generateUrl('question.update') %>" method="POST">
									<div class="form-group">
										<label for="question" class="col-sm-2 control-label">Question</label>
										<div class="col-sm-9">
											<input type="text" class="form-control" id="question" name="question" value="<%= questionDetails.question %>" placeholder="Enter question">
										</div>
									</div>
									<div class="form-group">
										<label for="answer1" class="col-sm-2 control-label">Answer 1</label>
										<div class="col-sm-9">
											<input type="text" class="form-control" id="answer1" name="answer1" value="<%= questionDetails.answer1 %>" placeholder="Enter answer 1">
										</div>
									</div>
									<div class="form-group">
										<label for="answer2" class="col-sm-2 control-label">Answer 2</label>
										<div class="col-sm-9">
											<input type="text" class="form-control" id="answer2" name="answer2" value="<%= questionDetails.answer2 %>" placeholder="Enter answer 2">
										</div>
									</div>
									<div class="form-group">
										<label for="answer3" class="col-sm-2 control-label">Answer 3</label>
										<div class="col-sm-9">
											<input type="text" class="form-control" id="answer3" name="answer3" value="<%= questionDetails.answer3 %>" placeholder="Enter answer 3">
										</div>
									</div>
									<div class="form-group">
										<label for="answer4" class="col-sm-2 control-label">Answer 4</label>
										<div class="col-sm-9">
											<input type="text" class="form-control" id="answer4" name="answer4" value="<%= questionDetails.answer4 %>" placeholder="Enter answer 4">
										</div>
									</div>

									<div class="form-group">
										<label for="correct_answer" class="col-sm-2 control-label">Correct Answer</label>
										<div class="col-sm-9">
											<input type="text" class="form-control" name="correct_answer" value="<%= questionDetails.correct_answer %>" id="correct_answer" placeholder="Enter correct answer">
										</div>
									</div>
									
									<div class="form-group">
										<label for="class" class="col-sm-2 control-label">Select class:</label>
										<div class="col-sm-9">
											<select class="form-control" id="class_id" name="class_id">
												<% for(var i= 0; i< classList.length; i++){ %>
												<option value="<%= classList[i]._id %>" <%=classList[i]._id.toString()==questionDetails.class_id._id.toString() ? 'selected' : ''%>  >
													<%= classList[i].class_name %>
												</option>
												<% } %>
											</select>
										</div>
									</div>
									<div class="form-group">
										<label for="question_type" class="col-sm-2 control-label">Select Subject:</label>
										<div class="col-sm-9">
											<select class="form-control" id="subject_id" name="subject_id">
												<% for(var i= 0; i< subjectList.length; i++){ %>
												<option value="<%= subjectList[i]._id %>" <%=subjectList[i]._id.toString()==questionDetails.subject_id._id.toString() ? 'selected' : ''%> >
													<%= subjectList[i].subject_name %>
												</option>
												<% } %>
											</select>
										</div>
									</div>


									
									
									<div class="col-sm-offset-2"> <button type="submit" class="btn btn-default">Update question</button> </div>
									<input type="hidden" name="questionIdVal" value="<%= questionDetails._id %>" />
								</form>
							</div>
						</div>
					</div>

				</div>
			</div>
		</div>
		<% include ../../../views/partials/adminfooter %>
	</div>
</body>

</html>